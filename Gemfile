source "https://rubygems.org"

# GitHub Pages 兼容的Jekyll版本
# 更新为Jekyll 4.x以匹配已安装版本
gem "jekyll", "~> 4.4.1"

# 分页插件（在_config.yml中已配置）
gem "jekyll-paginate"

# 代码高亮
gem "rouge"

# 如果需要使用GitHub Pages
# gem "github-pages", group: :jekyll_plugins

# Windows平台需要（Ruby 3.4兼容性问题，暂时注释）
# gem "wdm", "~> 0.1.1" if Gem.win_platform?

# 开发依赖
group :development do
  gem "jekyll-sitemap"
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
end